<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Seismic Analytics POC</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid px-4">
            <a class="navbar-brand fw-semibold" asp-controller="Sites" asp-action="Index">Seismic Analytics POC</a>
            <div class="navbar-nav ms-auto gap-2">
                <a class="nav-link" asp-controller="Sites" asp-action="Index">Sites</a>
                <a class="nav-link" asp-controller="Monitors" asp-action="Health" asp-route-id="1">Instrument Health</a>
                <a class="nav-link" asp-controller="Reports" asp-action="Index">Reports</a>
            </div>
        </div>
    </nav>

    <main class="container-xxl py-4" style="max-width: 1400px;">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
